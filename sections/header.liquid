            </div>

            <div class="header__text hidden font-medium">
                Secure Checkout
            </div>
        </div>
    </div>
</header>

{% if ss.is_sticky %}
    <style>
      .shopify-section-group-header-group   {
        position: sticky;
        top: 0;
        z-index: 99;
      }
    </style>
{% endif %}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "checkbox",
      "label": "Is Sticky",
      "id": "is_sticky",
      "default": false
    },
    {
      "type": "image_picker",
      "label": "Logo",
      "id": "logo"
    },
    {
      "type": "link_list",
      "label": "Header Menu",
      "id": "header_menu"
    }
  ]
}
{% endschema %}