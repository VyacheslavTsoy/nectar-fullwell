{% assign ss = section.settings %}

<header class="header bg-lightAzure text-white">
    <div class="container">
        <div class="header__inner flex justify-between items-center">
            <button class="header__burger flex flex-col justify-center items-center gap-2 md:hidden" @click="$store.mobileNav.isOpen = !$store.mobileNav.isOpen" x-data>
                <span class="header__burger-line bg-white"></span>
                <span class="header__burger-line bg-white"></span>
                <span class="header__burger-line bg-white"></span>
            </button>

            {% if ss.logo != blank %}
                <div class="header__logo lg:w-[25%]">
                    <a href="/" class="block max-w-[9rem] md:max-w-[15rem]">
                        {{ ss.logo | image_url: width: 240 | image_tag }}
                    </a>
                </div>
            {% endif %}

            {% if ss.header_menu != blank %}
            <div class="header__nav hidden md:block lg:w-[50%] lg:justify-center">
                <ul class="header__nav-list flex gap-[3rem] lg:justify-center">
                    {% for link in ss.header_menu.links %}
                        <li class="header__nav-item">
                            <a href="{{ link.url }}" class="header__nav-link">{{ link.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}

