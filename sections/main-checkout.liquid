{% assign sst = section.settings %}
{% assign blocks = section.blocks %}

{% if sst.products != blank %}
<div class="checkout" x-data="checkout">
    <div class="checkout__inner max-w-[39.5rem] mx-auto px-[2rem] py-[2.4rem]">
        {% for block in blocks %}
            {% case block.type %}
                {% when 'quantity' %}
                    {% render 'checkout-quantity', block: block, index: forloop.index %}
                {% when 'flavors' %}
                    {% render 'checkout-flavors', block: block, index: forloop.index %}
                {% when 'frequency' %}
                    {% render 'checkout-frequency', block: block, index: forloop.index %}
            {% endcase %}
        {% endfor %}
    </div>

    <div class="checkout__cta sticky bottom-0 left-0 right-0">
        <div class="checkout__cta-inner max-w-[39.3rem] mx-auto px-[2rem] text-sm">
            <div class="checkout__cta-total flex items-center justify-between gap-2 mb-2">
                <div class="checkout__cta-saving font-bold font-family-poppins">
                    Youâ€™re Saving 50% Off
                </div>

                <div class="checkout__cta-total-price">
                    <div class="price" data-compare-price="$148.70">$89.95</div>
                </div>
            </div>

            <button class="checkout__cta-btn" disabled>
                Select 3 More Pouches <svg width="23" height="28" viewBox="0 0 23 28" fill="none" xmlns="http://www.w3.org/2000/svg">
