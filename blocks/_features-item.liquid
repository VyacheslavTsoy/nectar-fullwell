{% assign bst = block.settings %}

<div class="features__item flex flex-col justify-center items-center gap-2 md:gap-5 w-[var(--item-width)] bg-white rounded-lg px-2 py-5 md:pt-9 md:pb-8 min-h-[10.5rem]" style="border: 1px solid #CCCCCC; --item-height: {{ bst.height }}px;">
  <div class="features__item-icon">
    {{ bst.icon }}
  </div>
  <div class="features__item-title text-center">
    {{ bst.title }}
  </div>
</div>

{% schema %}
{
  "name": "Features Item",
  "tag": null,
  "settings": [
    {
      "type": "textarea",
      "id": "icon",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "Features Item"
    }
  ]
}
{% endschema %}