{% assign bst = block.settings %}
<div class="inline-review flex whitespace-nowrap gap-2 items-center font-family-poppins">
    <div class="flex items-center gap-0.5">
        {% render 'stars', score: 5 %}
    </div>
    <div class="text-sm md:text-base">
        {{ bst.title }}
    </div>
</div>

{% stylesheet %}
@media (max-width: 768px) {
    .inline-review svg{
        width: 1.3rem;
        height: 1.3rem;
    }
}
{% endstylesheet %}
        

{% schema %}
{
  "name": "Inline Review",
  "settings": [
    {
      "type": "richtext",
      "label": "Title",
      "id": "title"
    }
  ],
  "presets": [
    {
      "name": "Inline Review",
      "settings": {
        "title": "<p>Excellent 4.8 12,000+ Trusted Reviews</p>"
      }
    }
  ]
}
{% endschema %}