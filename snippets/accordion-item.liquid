{% if question and answer %}
<div @click="activeItem = activeItem == '{{ question | handleize }}' ? null : '{{ question | handleize }}'" class="accordion-item {% if open_by_default %}accordion-item--active{% endif %} {% if large_title %}py-5 {% else %}py-2.5 {% endif %}" :class="{ 'accordion-item--active': activeItem == '{{ question | handleize }}' }">

    <div class="accordion-item__summary flex items-center justify-between font-medium text-coolBlack text-base md:text-baseLg">
        {{ question }}

        <svg width="22" height="23" viewBox="0 0 22 23" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M11 7.5V15.5M7 11.5H15M21 11.5C21 17.0228 16.5228 21.5 11 21.5C5.47715 21.5 1 17.0228 1 11.5C1 5.97715 5.47715 1.5 11 1.5C16.5228 1.5 21 5.97715 21 11.5Z" stroke="#469AFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>            
    </div>
    <div class="accordion-item__content pt-4 pb-2 text-sm" x-show="activeItem == '{{ question | handleize }}'">
        {{ answer }}
    </div>
</div>
{% endif %}