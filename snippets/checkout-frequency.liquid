<section class="checkout__part">
    <div class="checkout__part-header flex items-center justify-between mb-4">
        <h2 class="checkout__part-title text-baseLg flex items-center gap-2 font-bold"><span class="inline-flex items-center justify-center w-[1.8rem] h-[1.8rem] bg-[#0D3063] rounded-full text-white text-sm font-family-poppins mt-[-.2rem]">{{ index }}</span>  Select Frequency</h2>
    </div>

    <div class="checkout__frequency text-sm flex flex-col font-family-poppins gap-4">
        <label class="checkout__frequency-item block">
            <input type="radio" name="frequency" value="1">
            <div class="checkout__frequency-header mb-[.6rem] flex items-center justify-between gap-4">
                <div class="checkout__frequency-title items-center font-medium flex gap-3 text-[#333333]">
                    Subscribe and Save 50%
                </div>

                <div class="checkout__frequency-price" data-compare-price="$151.80">
                    <div class="price" data-compare-price="$151.80">$89.95</div>

                    <div class="text-xs font-medium text-[#333333]">
                        ($0.75 / packet)
                    </div>
                </div>
            </div>

            <div class="checkout__frequency-content">
                <div class="flex items-center justify-between gap-2 mb-[.6rem]">
                    <div class="text-sm text-[#222222] flex items-center gap-3">
                        Delivery Every
                    </div>

                    <select class="text-sm font-medium text-[#333333] w-[20rem]">
                        <option>Every 1 Month</option>
                        <option>Every 2 Months</option>
                        <option>Every 3 Months</option>
                    </select>
                </div>

                <ul class="checkout__frequency-features text-xs flex flex-col gap-1 text-[#333333]">
                    <li>
                        <b><em>Free Expedited Shipping*</em></b>
                    </li>
                    <li>
                        <b><em>Free $35.99 Mystery Gift</em></b> on Order #3
                    </li>
                    <li>
                        Easily Pause, Cancel or Adjust Flavors <b><em>Any Time</em></b>
                    </li>
                </ul>
            </div>
        </label>

        <label class="checkout__frequency-item block">
            <input type="radio" name="frequency" value="1">
            <div class="checkout__frequency-header flex items-center justify-between gap-4">
                <div class="checkout__frequency-title items-center font-medium flex gap-3 text-[#333333]">
                    Subscribe and Save 50%
                </div>

                <div class="checkout__frequency-price">
                    <div class="price price--dark">$109.95</div>
                </div>
            </div>
        </label>
    </div>
</section>