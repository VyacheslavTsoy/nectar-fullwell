<section class="checkout__part mt-[1.6rem]">
    <div class="checkout__part-header flex items-center justify-between mb-4">
        <h2 class="checkout__part-title text-baseLg flex items-center gap-2 font-bold"><span class="inline-flex items-center justify-center w-[1.8rem] h-[1.8rem] bg-[#0D3063] rounded-full text-white text-sm font-family-poppins mt-[-.2rem]">{{ index }}</span>  {{ block.settings.title }}</h2>
    </div>

    <div class="checkout__frequency text-sm flex flex-col font-family-poppins gap-4">
        <label class="checkout__frequency-item block" :class="{'checkout__frequency-item--active': purchaseType === 'subscription'}">
            <input type="radio" name="purchaseType" value="subscription" x-model="purchaseType" @change="updateCheckout()">
            <div class="checkout__frequency-header flex items-start justify-between gap-4">
                <div class="checkout__frequency-title items-center font-medium flex gap-3 text-[#333333]">
                    {{ section.settings.label_subscription }}
                </div>

                <div class="checkout__frequency-price" data-compare-price="$151.80">
                    <div class="price" :data-compare-price="currentPouch?.compare_price_subscription > currentSubscriptionPrice ? formatMoney(currentPouch?.compare_price_subscription) : formatMoney(currentSubscriptionPrice)" x-text="formatMoney(currentSubscriptionPrice)"></div>

                    <div class="text-xs font-medium text-[#333333]" x-show="purchaseType === 'subscription'">
                        (<span x-text="formatMoney(subscriptionPricePerStick)"></span> / packet)
                    </div>
                </div>
            </div>

            <div class="checkout__frequency-content mt-[.6rem]" x-show="purchaseType === 'subscription'">
                <template x-if="currentProduct?.sellingPlans.length > 0">
                    <div class="flex items-center justify-between gap-3 mb-[.6rem]">
                        <div class="text-sm text-[#222222] flex items-center gap-3 flex-shrink-0">
                            {{ section.settings.label_delivery }}
                        </div>

                        <select class="text-sm font-medium text-[#333333] w-[80%]" x-model="selectedSellingPlan">
                            <template x-for="sellingPlan in currentProduct?.sellingPlans">
                                <option :value="sellingPlan.id" :selected="sellingPlan.id == selectedSellingPlan" x-data="{formattedName: sellingPlan.name.replace('Delivery', '')}" x-text="formattedName">
                                </option>
                            </template>
                        </select>
                    </div>
                </template>

                {% if section.settings.label_subscription_description != blank %}
                    <div class="checkout__frequency-features text-xs flex flex-col gap-1 text-[#333333]">
                        {{ section.settings.label_subscription_description }}
                    </div>
                {% endif %}
            </div>
        </label>

        <label class="checkout__frequency-item block" :class="{'checkout__frequency-item--active': purchaseType === 'one-time'}">
            <input type="radio" name="purchaseType" value="one-time" x-model="purchaseType" @change="updateCheckout()">
            <div class="checkout__frequency-header flex items-start justify-between gap-4">
                <div class="checkout__frequency-title items-center font-medium flex gap-3 text-[#333333]">
                    {{ section.settings.label_one_time }}
                </div>

                <div class="checkout__frequency-price text-right">
                    <div class="price price--dark" x-text="formatMoney(currentOneTimePrice)" :data-compare-price="currentPouch?.compare_price_one_time > currentOneTimePrice ? formatMoney(currentPouch?.compare_price_one_time) : null"></div>
                    <div class="text-xs font-medium text-[#333333]" x-show="purchaseType === 'one-time'">
                        (<span x-text="formatMoney(oneTimePricePerStick)"></span> / packet)
                    </div>
                </div>
            </div>

            <div class="checkout__frequency-content" x-show="purchaseType === 'one-time'">
                <template x-if="minQty >= 2">
                    <div class="shipping-badge flex items-center gap-3 justify-center text-sm font-medium mt-3">
